extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3.text-right השלמת איפוס הסיסמה
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') סיסמה חדשה
      .col-md-7
        input.form-control(type='password', name='password', id='password', placeholder='סיסמה חדשה', autofocus, required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='confirm') אשרי סיסמה
      .col-md-7
        input.form-control(type='password', name='confirm', id='confirm', placeholder='אשרי סיסמה', required)
    .form-group.offset-sm-3.col-md-7.pl-2
      button.btn.btn-primary.btn-reset(type='submit')
        i.far.fa-keyboard.fa-sm
        | שני סיסמה
